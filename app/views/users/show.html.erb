<p id="notice"><%= notice %></p>

<%= form_tag(search_path, :method => "get") do %>
<div>
  <%= search_field_tag :search, params[:search], placeholder: "Type" %>
  <div>
  <%= button_tag 'Search', :headings => nil %>
  </div>
</div>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Website:</strong>
  <%= @user.website %>
</p>

<p>
  <strong>Shortened url:</strong>
  <%= @user.shortened %>
</p>

<p>
  <strong>Heading from website:</strong>
  <% @user.headings.each do |h| %>
    <p><%= h %></p>
  <% end %>
</p>

<p>
  <strong>Friends:</strong>
  <% @user.friends.each do |f| %>
  <%= f.name %>
  <%= link_to 'View profile', f %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
