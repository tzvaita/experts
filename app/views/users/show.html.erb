<p id="notice"><%= notice %></p>
<%= form_tag(search_path, :method => "get") do %>
<div class="form-inline">
  <%= search_field_tag :search, params[:search], placeholder: "Enter search text", class: 'form-control' %>
 
  <%= button_tag 'Search', :headings => nil, class: "btn btn-primary buton" %>
</div>
<% end %>


<div class="row diver">
  <div class="col-lg-4">
    <strong>Name:</strong>
    <%= @user.name %>
  </div>

  <div class="col-lg-4">
    <strong>Website:</strong>
    <a href="<%= @user.website %>"><%= @user.website %></a>
  </div>

  <div class="col-lg-4">
    <strong>Shortened url:</strong>
    <a href="<%= @user.shortened %>"><%= @user.shortened %></a>
  </div>
</div>

<div class="diver">
  <div class="row">
  <div class="col-lg-6 pt-4">
    <h4><strong>Headings from website:</strong></h4>
    <% @user.headings.each do |h| %>
      <li><%= h %></li>
    <% end %>
  </div>

  <div class="col-lg-6">
    <h4><strong>Friends:</strong></h4>
    <% @user.friends.each do |f| %>
    <li>
    <%= f.name %>
    <%= link_to 'View profile', f %>
    </li>
    <% end %>
  </div>
  </div>
</div>
<div class="links">
<%= link_to 'Edit profile', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %> |
<%= link_to 'Logout', logout_path, method: :delete %>
</div>